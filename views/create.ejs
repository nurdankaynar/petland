        <link href="/styles/home.css" rel="stylesheet"/>
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    
        <title>petland</title>
    </head>
    <body>
        

        <div class="bg-light"> <!-- navbar started-->
        
            <nav class=" container navbar navbar-expand-lg navbar-light ">
                <div class="container-fluid">
                <a class="navbar-brand" href="#">Petland</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                        <a class="nav-link" href="#">cats</a>
                        <a class="nav-link" href="#">create</a>
                        <a class="nav-link disabled" aria-disabled="true">Disabled</a>
                        </div>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-success" type="submit">Search</button>
                        </form>
                </div>
                </div>
            </nav>
            
        </div>  <!-- navbar ended-->


        <!-- create blog form -->
        <div class="container">
            <form action= "/" method="post">
                <select class="form-select" aria-label="Default select example" name="selectedPet">
                    <option selected> Select your pet</option>
                    <option value="cat">Cat</option>
                    <option value="dog">Dog</option>
                </select>
                <div class="row">
                    <label for="title"> Blog Title: </label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="row">
                    <label for="snippet"> Snippet: </label>
                    <input type="text" id="snippet" name="snippet" required>
                </div>
                <div class="row"> 
                    <label for="blogBody"> Blog Body:</label>
                    <textarea placeholder="blog body" id="blogBody" name="blogBody"></textarea>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </body>
</html>